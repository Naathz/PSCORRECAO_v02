<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.logonrmlocal.pokedexapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- SE QUISER DEIXAR TODO O APP EM FULLSCREEN MUDE O @STYLE/AppTheme para @STYLE/FullScreen nessa linha de cima -->

        <activity
            android:name=".SplashActivity"
            android:theme="@style/FullScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ListaPokemonActivity" />
        <activity android:name=".DetalheActivity"></activity>
    </application>

</manifest>